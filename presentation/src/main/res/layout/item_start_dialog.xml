<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.test.presentation.screeens.main.StartViewModel" />
    </data>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_main_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_main_item"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_coins_24dp"
                android:gravity="center"
                android:maxWidth="250dp"
                android:text="  How many coins?"
                android:textColor="@color/h1Color"
                android:textSize="@dimen/itemH1Size" />

        </LinearLayout>

        <EditText
            android:id="@+id/coinQuentity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:hint="@string/quantity"
            android:inputType="date"
            android:textColor="@color/ic_color_greey"
            android:textSize="@dimen/itemH1Size" />

    </LinearLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.presentation.screeens.main.StartViewActivity">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_main_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_main_item"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_coins_24dp"
                android:gravity="center"
                android:maxWidth="250dp"
                android:text="  How many coins?"
                android:textColor="@color/h1Color"
                android:textSize="@dimen/itemH1Size" />

        </LinearLayout>

        <EditText
            android:id="@+id/coinQuentity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:hint="@string/quantity"
            android:inputType="date"
            android:textColor="@color/ic_color_greey"
            android:textSize="@dimen/itemH1Size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/buttonMenuItem"
            android:background="@color/bg_above_navig">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonMenuItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/actionBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/ic_color_greey"
                android:textStyle="bold"
                android:text="@string/back"
                tools:text="BACK"/>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/bg_above_navig">
            </LinearLayout>

            <TextView
                android:id="@+id/actionAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/ic_color_greey"
                android:textStyle="bold"
                android:text="@string/addQuantity"
                tools:text="ADD"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>